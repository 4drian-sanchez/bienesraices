extends ../layout/index

block contenido
    h1(class="text-center text-4xl font-black text-slate-800")= pagina

    div(class="mx-auto max-w-md mt-8")
        div(class="bg-white py-8 px-4 shadow")
            form(
                class="space-y-5"
            )
                div 
                    label(
                        class="block text-sm uppercase text-gray-700 mb-3 font-bold"
                        for="nombre"
                    ) Tu nombre
                    input(
                        id="nombre"
                        name="nombre"
                        type="text"
                        placeholder="Tu nombre"
                        class="w-full px-3 py-2 border border-gray-500 rounded-md placeholder-gray-400"
                    )
                div 
                    label(
                        class="block text-sm uppercase text-gray-700 mb-3 font-bold"
                        for="email"
                    ) Email de registro
                    input(
                        id="email"
                        name="email"
                        type="email"
                        placeholder="Tu correo"
                        class="w-full px-3 py-2 border border-gray-500 rounded-md placeholder-gray-400"
                    )
                div 
                    label(
                        class="block text-sm uppercase text-gray-700 mb-3 font-bold"
                        for="password"
                    ) Contraseña
                    input(
                        id="password"
                        name="password"
                        type="password"
                        placeholder="Tu contraseña"
                        class="w-full px-3 py-2 border border-gray-500 rounded-md placeholder-gray-400"
                    )
                div 
                    label(
                        class="block text-sm uppercase text-gray-700 mb-3 font-bold"
                        for="password2"
                    ) Repite tu contraseña
                    input(
                        id="password2"
                        name="password2"
                        type="password"
                        placeholder="Repite tu contraseña"
                        class="w-full px-3 py-2 border border-gray-500 rounded-md placeholder-gray-400"
                    )

                div(class="flex items-center justify-between")
                    a.text-gray-500.text-sm(href="/auth/login") ¿Ya tienes Cuenta? Inicia sesión
                    a.text-gray-500.text-sm(href="/auth/olvide-password") Olvide mi contraseña

                input(
                    type="submit"
                    value="Crear cuenta"
                    class="w-full py-2 border bg-indigo-500 hover:bg-indigo-700 text-white uppercase font-bold transition-colors rounded-md md:cursor-pointer"
                )